<!-- res/layout/item_itinerary.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/itinerary_2"
            android:scaleType="centerCrop"/>

        <!-- Status Button at Top Right Corner -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/statusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_status_success"
            android:text="Completed"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/gray_text_color" />

        <!-- Itinerary Name at Bottom -->
        <TextView
            android:id="@+id/itineraryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="18dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:text="Trip on China ~"
            android:textStyle="bold"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>